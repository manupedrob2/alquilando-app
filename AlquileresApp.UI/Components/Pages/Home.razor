@page "/"
@rendermode InteractiveServer
@using AlquileresApp.Core.Entidades
@using AlquileresApp.Core.CasosDeUso.Propiedad
@using AlquileresApp.Core.CasosDeUso.Reserva
@using AlquileresApp.Core.CasosDeUso.Calificacion
@using AlquileresApp.Core.Enumerativos
@using AlquileresApp.Core.CasosDeUso.Promocion
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IJSRuntime JS
@inject IWebHostEnvironment Environment
@inject CasoDeUsoListarPropiedadesFiltrado CUListarPropiedadesFiltrado
@inject CasoDeUsoCrearReserva CUReservarPropiedad
@inject CasoDeUsoListarPromocionesActivas CUListarPromocionesActivas
@inject CasoDeUsoListarPropiedadesDestacadas CUListarPropiedadesDestacadas
@inject CasoDeUsoMostrarCalificacion CUMostrarCalificacion

<!-- Contenedor Principal con Fuente Poppins y Fondo Blanco -->
<div class="min-h-screen pb-20 bg-white font-['Poppins'] text-gray-800">

    <!-- 1. HERO SECTION (Imagen Principal) -->
    <div class="relative h-[85vh] min-h-[600px] bg-cover bg-center flex flex-col justify-center items-center text-white"
         style="background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?q=80&w=2073&auto=format&fit=crop');">
        
        <!-- Overlay oscuro para leer el texto -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/10 to-black/30"></div>

        <div class="relative z-10 w-full max-w-6xl px-4 text-center">
            <h1 class="mb-10 text-5xl md:text-6xl font-extrabold drop-shadow-lg tracking-tight animate-[fadeIn_1s_ease-out]">
                Encuentra tu próximo destino
            </h1>
            
            <!-- BUSCADOR FLOTANTE -->
            <EditForm Model="Filtros" OnValidSubmit="Buscar">
                <DataAnnotationsValidator />
                
                <div class="bg-white p-2 rounded-full shadow-[0_8px_30px_rgba(0,0,0,0.12)] flex flex-col md:flex-row items-center gap-2 max-w-4xl mx-auto border border-white/20 animate-[slideUp_0.8s_ease-out]">
                    
                    <!-- Input: Ubicación -->
                    <div class="relative flex-1 w-full md:w-auto px-6 py-3 border-b md:border-b-0 md:border-r border-gray-100 hover:bg-gray-50 rounded-3xl transition-colors">
                        <label class="block text-xs font-bold text-gray-800 uppercase tracking-wide mb-1">Ubicación</label>
                        <InputText @bind-Value="Filtros.Localidad" class="w-full bg-transparent border-none p-0 text-gray-600 placeholder-gray-400 focus:ring-0 font-medium text-sm" placeholder="¿A dónde vas?" />
                    </div>

                    <!-- Input: Llegada -->
                    <div class="relative w-full md:w-auto px-6 py-3 border-b md:border-b-0 md:border-r border-gray-100 hover:bg-gray-50 rounded-3xl transition-colors">
                        <label class="block text-xs font-bold text-gray-800 uppercase tracking-wide mb-1">Llegada</label>
                        <InputDate @bind-Value="Filtros.FechaInicio" class="w-full bg-transparent border-none p-0 text-gray-600 focus:ring-0 font-medium text-sm" />
                    </div>

                    <!-- Input: Salida -->
                    <div class="relative w-full md:w-auto px-6 py-3 border-b md:border-b-0 md:border-r border-gray-100 hover:bg-gray-50 rounded-3xl transition-colors">
                        <label class="block text-xs font-bold text-gray-800 uppercase tracking-wide mb-1">Salida</label>
                        <InputDate @bind-Value="Filtros.FechaFin" class="w-full bg-transparent border-none p-0 text-gray-600 focus:ring-0 font-medium text-sm" />
                    </div>

                    <!-- Input: Viajeros -->
                    <div class="relative w-full md:w-auto px-6 py-3 hover:bg-gray-50 rounded-3xl transition-colors flex-1">
                        <label class="block text-xs font-bold text-gray-800 uppercase tracking-wide mb-1">Viajeros</label>
                        <InputNumber @bind-Value="Filtros.CantidadHuespedes" class="w-full bg-transparent border-none p-0 text-gray-600 placeholder-gray-400 focus:ring-0 font-medium text-sm" placeholder="¿Cuántos?" />
                    </div>

                    <!-- Botón Buscar (Azul Pastel) -->
                    <div class="p-1">
                        <button type="submit" class="w-14 h-14 bg-[#8CA9FF] hover:bg-[#7A98EF] text-white rounded-full flex items-center justify-center shadow-lg shadow-blue-200 transition-all hover:scale-105 active:scale-95 border-none cursor-pointer">
                            <i class="fas fa-search text-xl"></i>
                        </button>
                    </div>
                </div>
                
                <div class="mt-4 text-center">
                     <ValidationSummary />
                </div>
            </EditForm>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- 2. SECCIÓN PROMOCIONES (Banners Estilo Pastel) -->
        @if (Promociones != null && Promociones.Any())
        {
            <div class="mt-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-8 pl-2 border-l-4 border-[#8CA9FF]">Ofertas Especiales</h2>
                
                <div id="carouselPromociones" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-[32px] overflow-hidden shadow-xl">
                        @for (int i = 0; i < Promociones.Count; i++)
                        {
                            var promo = Promociones[i];
                            var isActive = i == 0 ? "active" : "";
                            
                            /* Gradientes de Fondo */
                            var bgStyle = i % 2 == 0 
                                ? "background: linear-gradient(120deg, #8CA9FF 0%, #AAC4F5 100%);" /* Azul a Cielo */
                                : "background: linear-gradient(120deg, #FFD166 0%, #FFF8DE 100%); color: #4b5563 !important;"; /* Amarillo a Crema */
                            
                            var textColor = i % 2 != 0 ? "text-gray-700" : "text-white";
                            var badgeColor = i % 2 != 0 ? "bg-white text-[#8CA9FF]" : "bg-[#FFF8DE] text-[#8CA9FF]";

                            <div class="carousel-item @isActive">
                                <div class="min-h-[320px] flex items-center px-8 md:px-16 py-8 transition-transform duration-500 hover:scale-[1.01]" style="@bgStyle">
                                    <div class="w-full md:w-2/3">
                                        <span class="inline-block px-4 py-1.5 rounded-full text-sm font-bold mb-4 shadow-sm @badgeColor">
                                            @promo.PorcentajeDescuento% OFF
                                        </span>
                                        <h2 class="text-4xl md:text-5xl font-extrabold mb-4 @textColor leading-tight">@promo.Titulo</h2>
                                        <p class="text-lg md:text-xl mb-8 opacity-90 @textColor">@promo.Descripcion</p>
                                        
                                        <button class="px-8 py-3 bg-white text-[#8CA9FF] font-bold rounded-full shadow-md hover:shadow-lg hover:bg-gray-50 transition-all transform hover:-translate-y-1 border-0" 
                                                data-bs-toggle="modal" data-bs-target="#modalPropiedadesPromo_@promo.Id">
                                            Ver Ofertas
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- MODAL DE PROMOS -->
                                <div class="modal fade" id="modalPropiedadesPromo_@promo.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-xl modal-dialog-centered">
                                        <div class="modal-content border-0 rounded-[32px] overflow-hidden shadow-2xl">
                                            <div class="modal-header border-0 p-6 bg-gray-50">
                                                <h5 class="modal-title font-bold text-2xl text-gray-800">@promo.Titulo</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body p-8 bg-white">
                                                <div class="row">
                                                    @foreach (var prop in promo.Propiedades)
                                                    {
                                                        <div class="col-md-4 mb-6">
                                                            <!-- Card Reutilizable -->
                                                            <div class="bg-white rounded-[32px] overflow-hidden shadow-[0_4px_20px_rgba(0,0,0,0.06)] hover:shadow-[0_20px_40px_rgba(140,169,255,0.2)] hover:-translate-y-2 transition-all duration-500 h-full cursor-pointer group border border-gray-100">
                                                                <div class="h-48 overflow-hidden relative">
                                                                     @if (prop.Imagenes.Any()) { <img src="@prop.Imagenes.First().Url" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" /> }
                                                                     else { <img src="https://via.placeholder.com/400x300" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" /> }
                                                                </div>
                                                                <div class="p-6 flex flex-col justify-between flex-1">
                                                                    <div>
                                                                        <div class="flex items-center gap-2 mb-2">
                                                                            <i class="fas fa-map-marker-alt text-[#8CA9FF]"></i>
                                                                            <span class="font-bold text-gray-800">@prop.Localidad</span>
                                                                        </div>
                                                                        <h5 class="font-semibold text-lg leading-tight text-gray-700 mb-4 line-clamp-2">@prop.Titulo</h5>
                                                                    </div>
                                                                     @{
                                                                        var precioOriginal = prop.PrecioPorNoche;
                                                                        var descuento = promo.PorcentajeDescuento;
                                                                        var precioConDescuento = precioOriginal * (1 - descuento / 100.0m);
                                                                     }
                                                                     <div class="mt-auto">
                                                                         <div class="flex items-baseline gap-2">
                                                                             <span class="text-gray-400 line-through text-sm">@($"{precioOriginal:C}")</span>
                                                                             <span class="text-[#8CA9FF] font-extrabold text-2xl">@($"{precioConDescuento:C}")</span>
                                                                             <span class="text-sm text-gray-400 font-medium">noche</span>
                                                                         </div>
                                                                         <a href="/propiedad/@prop.Id" class="block w-full text-center mt-4 py-3 bg-[#8CA9FF]/10 text-[#8CA9FF] font-bold rounded-full hover:bg-[#8CA9FF] hover:text-white transition-all no-underline">
                                                                            Ver detalle
                                                                         </a>
                                                                     </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @if(Promociones.Count > 1) {
                        <button class="carousel-control-prev w-20 opacity-0 hover:opacity-100 transition-opacity border-0 bg-transparent" type="button" data-bs-target="#carouselPromociones" data-bs-slide="prev">
                            <i class="fas fa-chevron-left text-3xl text-white drop-shadow-md"></i>
                        </button>
                        <button class="carousel-control-next w-20 opacity-0 hover:opacity-100 transition-opacity border-0 bg-transparent" type="button" data-bs-target="#carouselPromociones" data-bs-slide="next">
                            <i class="fas fa-chevron-right text-3xl text-white drop-shadow-md"></i>
                        </button>
                    }
                </div>
            </div>
        }

        <!-- 3. SECCIÓN PROPIEDADES DESTACADAS -->
        @if (PropiedadesDestacadas != null && PropiedadesDestacadas.Any())
        {
            <div class="mt-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-8 pl-2 border-l-4 border-[#8CA9FF]">Favoritos de los huéspedes</h2>
                
                <div id="carouselDestacadas" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner p-4"> 
                        @{
                            int itemsPorSlide = 3;
                            int totalSlides = (int)Math.Ceiling((double)PropiedadesDestacadas.Count / itemsPorSlide);
                            for (int i = 0; i < totalSlides; i++) {
                                var isActive = i == 0 ? "active" : "";
                                var propiedadesSlide = PropiedadesDestacadas.Skip(i * itemsPorSlide).Take(itemsPorSlide).ToList();
                                <div class="carousel-item @isActive">
                                    <div class="row">
                                        @foreach (var p in propiedadesSlide) {
                                            <div class="col-md-4 mb-6">
                                                <!-- Card Destacada -->
                                                <div class="bg-white rounded-[32px] overflow-hidden shadow-[0_4px_20px_rgba(0,0,0,0.06)] hover:shadow-[0_20px_40px_rgba(140,169,255,0.2)] hover:-translate-y-2 transition-all duration-500 h-full cursor-pointer group border border-gray-100" 
                                                     onclick="location.href='/propiedad/@p.Id'">
                                                    
                                                    <div class="h-64 overflow-hidden relative">
                                                        @if (p.Imagenes.Any()) { 
                                                            <img src="@p.Imagenes.First().Url" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" /> 
                                                        } else { 
                                                            <img src="https://via.placeholder.com/400x300?text=Sin+Imagen" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" /> 
                                                        }
                                                        <!-- Badge Calificación -->
                                                        <span class="absolute top-4 right-4 bg-[#FFF8DE] text-gray-800 px-3 py-1.5 rounded-full shadow-sm font-bold text-sm flex items-center gap-1.5">
                                                            <i class="fas fa-star text-yellow-400"></i> 
                                                            @(p.CalificacionPromedio > 0 ? p.CalificacionPromedio.ToString("F1") : "Nuevo")
                                                        </span>
                                                    </div>
                                                    
                                                    <div class="p-6">
                                                         <div class="flex items-center gap-2 mb-2">
                                                            <i class="fas fa-map-marker-alt text-[#8CA9FF]"></i>
                                                            <span class="font-bold text-gray-800">@p.Localidad</span>
                                                        </div>
                                                        <h3 class="font-semibold text-lg leading-tight text-gray-700 mb-4 truncate">@p.Titulo</h3>
                                                        
                                                        <div class="flex items-baseline gap-1">
                                                            <span class="font-extrabold text-2xl text-[#8CA9FF]">$@p.PrecioPorNoche</span> 
                                                            <span class="text-sm text-gray-400 font-medium">noche</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <!-- Flechas Carrusel Destacadas -->
                    @if(totalSlides > 1) {
                        <button class="carousel-control-prev w-auto -ml-4 lg:-ml-12 opacity-100 border-0 bg-transparent" type="button" data-bs-target="#carouselDestacadas" data-bs-slide="prev">
                            <div class="w-12 h-12 rounded-full bg-white shadow-md flex items-center justify-center hover:scale-110 transition-transform border border-gray-100 text-gray-600 hover:text-[#8CA9FF]">
                                <i class="fas fa-chevron-left"></i>
                            </div>
                        </button>
                        <button class="carousel-control-next w-auto -mr-4 lg:-mr-12 opacity-100 border-0 bg-transparent" type="button" data-bs-target="#carouselDestacadas" data-bs-slide="next">
                            <div class="w-12 h-12 rounded-full bg-white shadow-md flex items-center justify-center hover:scale-110 transition-transform border border-gray-100 text-gray-600 hover:text-[#8CA9FF]">
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </button>
                    }
                </div>
            </div>
        }

        <!-- 4. RESULTADOS DE BÚSQUEDA -->
        <div class="mt-16" id="resultados">
            @if (Propiedades != null && Propiedades.Any())
            {
                <h2 class="text-3xl font-bold text-gray-800 mb-8 pl-2 border-l-4 border-[#8CA9FF] animate-[fadeIn_0.5s]">Resultados de tu búsqueda</h2>
                <div class="row">
                    @foreach (var propiedad in Propiedades)
                    {
                        <div class="col-md-6 col-lg-3 mb-8 animate-[fadeInUp_0.5s_ease-out]">
                            <!-- CARD DE RESULTADO -->
                            <div class="bg-white rounded-[32px] overflow-hidden shadow-[0_4px_20px_rgba(0,0,0,0.06)] hover:shadow-[0_20px_40px_rgba(140,169,255,0.2)] hover:-translate-y-2 transition-all duration-500 h-full cursor-pointer group border border-gray-100">
                                
                                <!-- Carrusel de imágenes interno -->
                                <div id="carousel-card-@propiedad.Id" class="carousel slide h-64 relative" data-bs-interval="false">
                                    <div class="carousel-inner h-100">
                                        @if (propiedad.Imagenes.Any()) {
                                            var idx = 0;
                                            foreach(var img in propiedad.Imagenes.Take(3)) {
                                                <div class="carousel-item h-100 @(idx==0?"active":"")">
                                                    <img src="@img.Url" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
                                                </div>
                                                idx++;
                                            }
                                        } else {
                                            <div class="carousel-item active h-100">
                                                <img src="https://via.placeholder.com/400x300" class="w-full h-full object-cover" />
                                            </div>
                                        }
                                    </div>
                                    
                                    <!-- Badge Calificación -->
                                    <div class="absolute top-4 right-4 bg-[#FFF8DE] text-gray-800 px-3 py-1.5 rounded-full shadow-sm font-bold text-sm flex items-center gap-1.5 z-10">
                                        <i class="fas fa-star text-yellow-400"></i>
                                        <span>@(propiedad.CalificacionPromedio > 0 ? propiedad.CalificacionPromedio.ToString("F1") : "Nuevo")</span>
                                    </div>

                                    <!-- Flechas Internas -->
                                    @if(propiedad.Imagenes.Count > 1) {
                                        <button class="carousel-control-prev opacity-0 group-hover:opacity-100 transition-all duration-300 pl-2 border-0 bg-transparent" type="button" data-bs-target="#carousel-card-@propiedad.Id" data-bs-slide="prev" onclick="event.stopPropagation()">
                                            <span class="bg-white/90 backdrop-blur-sm rounded-full w-8 h-8 flex items-center justify-center hover:bg-white transition-colors shadow-sm">
                                                <i class="fas fa-chevron-left text-gray-800 text-xs"></i>
                                            </span>
                                        </button>
                                        <button class="carousel-control-next opacity-0 group-hover:opacity-100 transition-all duration-300 pr-2 border-0 bg-transparent" type="button" data-bs-target="#carousel-card-@propiedad.Id" data-bs-slide="next" onclick="event.stopPropagation()">
                                            <span class="bg-white/90 backdrop-blur-sm rounded-full w-8 h-8 flex items-center justify-center hover:bg-white transition-colors shadow-sm">
                                                <i class="fas fa-chevron-right text-gray-800 text-xs"></i>
                                            </span>
                                        </button>
                                    }
                                </div>

                                <!-- Cuerpo de la Tarjeta -->
                                <div class="p-6" @onclick="() => IrAReservar(propiedad.Id)">
                                    <div class="flex justify-between items-start mb-1">
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-map-marker-alt text-[#8CA9FF]"></i>
                                            <h4 class="font-bold text-gray-800 text-lg">@propiedad.Localidad</h4>
                                        </div>
                                    </div>
                                    <h3 class="font-semibold text-lg leading-tight text-gray-700 mb-3 line-clamp-2 h-[3.2rem]">@propiedad.Titulo</h3>
                                    
                                    <div class="text-xs text-gray-400 mb-4 flex items-start gap-1.5">
                                        <i class="far fa-check-circle mt-0.5 text-[#8CA9FF]"></i>
                                        <p class="line-clamp-2">@ObtenerDescripcionPolitica(propiedad.PoliticaCancelacion)</p>
                                    </div>
                                    
                                    <div class="flex items-baseline gap-1 mt-auto pt-2 border-t border-gray-50">
                                        <span class="font-extrabold text-2xl text-[#8CA9FF]">$@propiedad.PrecioPorNoche</span> 
                                        <span class="text-sm text-gray-400 font-medium">noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (Propiedades != null && !Propiedades.Any())
            {
                <!-- Estado "Sin Resultados" -->
                <div class="text-center py-24 bg-gradient-to-b from-gray-50 to-white rounded-[32px] mt-10 border border-dashed border-gray-200 animate-[fadeIn_0.5s]">
                    <div class="w-24 h-24 bg-[#AAC4F5]/20 rounded-full flex items-center justify-center mx-auto mb-6 shadow-sm">
                        <i class="fas fa-search-location text-4xl text-[#8CA9FF]"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800 mb-3">No encontramos alojamientos</h3>
                    <p class="text-gray-500 text-lg max-w-md mx-auto">Intenta ajustar tus fechas, cambiar la ubicación o reducir el número de viajeros.</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Promocion> Promociones = new();
    private List<Propiedad> PropiedadesDestacadas = new();
    private SearchFilters Filtros = new()
    {
        FechaInicio = DateTime.Today,
        FechaFin = DateTime.Today.AddDays(1)
    };
    private List<Propiedad>? Propiedades;
    private Usuario UsuarioActual = new Cliente
    {
        Nombre = "María",
        Apellido = "Gómez",
        Email = "maria@demo.com",
        Telefono = "1234567890",
        Contraseña = "123456",
        FechaNacimiento = new DateTime(1990, 1, 1)
    };
    private HashSet<int> PropiedadesExpandida = new();
    
    protected override void OnInitialized()
    {
        Promociones = CUListarPromocionesActivas.Ejecutar();
        PropiedadesDestacadas = CUListarPropiedadesDestacadas.Ejecutar();
    }
    
    private void Buscar()
    {
        Propiedades = CUListarPropiedadesFiltrado.Ejecutar(Filtros);
    }

    private void IrAReservar(int Id)
    {
        NavigationManager.NavigateTo($"/propiedad/{Id}");
    }

    private string ObtenerDescripcionPolitica(PoliticasDeCancelacion politica)
    {
        return politica switch
        {
            PoliticasDeCancelacion.Anticipo20_72hs => "Requiere 20% anticipo. Cancela hasta 72hs antes.",
            PoliticasDeCancelacion.SinAnticipo_NoCancelable => "Sin anticipo. No reembolsable.",
            PoliticasDeCancelacion.PagoTotal_48hs_50 => "Pago total. Reintegro 50% hasta 48hs antes.",
            _ => "Política estándar."
        };
    }
}